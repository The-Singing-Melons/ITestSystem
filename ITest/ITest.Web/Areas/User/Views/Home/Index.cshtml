@using ITest.Web.Areas.User.Models
@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Dashboard";
}

<h1> Dashboard </h1>
<hr class="dashboard-breaker">
<br>
<h2>    Welcome User! Lorem Ipsum...</h2>

<div class="container index">
    <div class="row">
        <div class="col-md-6">
            <div class="panel with-nav-tabs panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        @foreach (var c in Model)
                        {
                            var className = c.Name == "JAVA" ? "active" : "";

                            <li class="@className">
                                <a href="#tab1default"
                                   id="#category-tab"
                                   data-toggle="tab"
                                   data-category="@c.Name">
                                    @c.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab1default">
                            <div class="well well-sm clearfix">
                                <span class="pull-left"></span>
                                <a id="test-start-btn" class="btn btn-default pull-right"
                                   asp-area="User"
                                   asp-controller="Home"
                                   asp-action="GetRandomTest">
                                    Start Test
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user-tests.js"></script>
}