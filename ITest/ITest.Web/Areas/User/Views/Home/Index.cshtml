@using ITest.Web.Areas.User.Models
@model IEnumerable<DashboardTestViewModel>
@{
    ViewData["Title"] = "Dashboard";
}

<h1> Dashboard </h1>
<hr class="dashboard-breaker">
<br>
<h2>    Welcome User! Lorem Ipsum...</h2>

<div class="container index">
    <div class="row">
        <div class="col-md-6">
            <div class="panel with-nav-tabs panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1default" data-toggle="tab">Java</a></li>
                        <li><a href="#tab2default" data-toggle="tab">SQL</a></li>
                        <li><a href="#tab3default" data-toggle="tab">JavaScript</a></li>
                        <li><a href="#tab3default" data-toggle="tab">.NET</a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab1default">
                            <div class="well well-sm clearfix">
                                <span class="pull-left">@Model.Where(x => x.CategoryName == "JAVA").FirstOrDefault().Name</span>
                                <a id="test-start-btn" class="btn btn-default pull-right"
                                   asp-area="User"
                                   asp-controller="Home"
                                   asp-action="TakeTest"
                                   asp-route-id="@Model.Where(x => x.CategoryName == "JAVA").FirstOrDefault().Id">
                                    Start Test
                                </a>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab2default">Default 2</div>
                        <div class="tab-pane fade" id="tab3default">Default 3</div>
                        <div class="tab-pane fade" id="tab4default">Default 4</div>
                        <div class="tab-pane fade" id="tab5default">Default 5</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>