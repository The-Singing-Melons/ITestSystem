@model ManageTestViewModel

@{
    ViewData["Title"] = "Edit Test";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <form asp-area="Admin" asp-controller="Manage" asp-action="EditPublishedTest" method="post">
        <hr />
        <div class="row">
            <div class="form-group">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Test Name</span>
                        <p class="form-control">@Model.TestName</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Requested Time</span>
                        <p class="form-control">@Model.RequestedTime</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Category Name</span>
                        <p class="form-control">@Model.CategoryName</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div id="questions-container">
                <div class="row">
                    <button class="btn btn-default pull-right" type="button" disabled>Add Question</button>
                    <button id="collapse-questions" class="btn btn-default pull-right" type="button">Collapse All</button>
                </div>

                <div class="row">
                    <div id="questions-body" class="row">
                        @if (Model.Questions != null && Model.Questions.Count != 0)
                        {
                            for (int q = 0; q < Model.Questions.Count; q++)
                            {
                        <div id="question-@q" class="question-container panel panel-default">
                            <a href="#collapse-@q" data-toggle="collapse" data-parent="#accordion">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Question @string.Format("{0}", q + 1)</h4>
                                </div>
                            </a>

                            <div id="collapse-@q" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="question-description well">
                                        <h3>Description</h3>
                                        <p>@Html.Raw(Model.Questions[q].Body)</p>
                                    </div>
                                    <div class="answers-container">
                                        @if (Model.Questions[q].Answers != null)
                                                {
                                                    for (int a = 0; a < Model.Questions[q].Answers.Count; a++)
                                                    {
                                                <div id="question-@q-answer-@a" class="answer-container well">
                                                    <div class="row answer-header">
                                                        <div class="col">
                                                            <h3>Answer @string.Format("{0}", a + 1)</h3>
                                                        </div>

                                                        <div class="col">
                                                            <label class="btn btn-success pull-right">
                                                                @if (Model.Questions[q].Answers[a].IsCorrect)
                                                                        {
                                                                        <input id="@string.Format("Questions_{0}__Answers_{1}__IsCorrect", q, a)" name="radio-@q" class="answer-is-correct" type="radio" value="true" autocomplete="off" checked>
                                                                        }
                                                                        else
                                                                        {
                                                                        <input id="@string.Format("Questions_{0}__Answers_{1}__IsCorrect", q, a)" name="radio-@q" class="answer-is-correct" type="radio" value="true" autocomplete="off">
                                                                        }
                                                            </label>
                                                        </div>
                                                    </div>

                                                    <p>@Html.Raw(Model.Questions[q].Answers[a].Content)</p>
                                                </div>
                                                    }
                                                }
                                                else
                                                {
                                                <div class="no-answers">
                                                    <h4 class="w-100 p-3">You need to add Answers to your Question</h4>
                                                </div>
                                                }
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <button class="btn btn-default pull-right" type="button" disabled>Add Answer</button>
                                </div>
                            </div>
                        </div>
                            }
                        }
                        else
                        {
                        <div>
                            <h4 class="w-100 p-3">You need to add Questions to your Test</h4>
                        </div>
                        }
                    </div>
                </div>

                <div class="row">
                    <button class="btn btn-default pull-right" type="button" disabled>Add Question</button>
                    <button id="collapse-questions" class="btn btn-default pull-right" type="button">Collapse All</button>
                </div>
            </div>
        </div>

        <input asp-for="Id" type="hidden" value="@Model.Id" />

        <button name="IsPublished" class="create-test btn btn-default" type="submit" value="false">Save</button>
        <button name="IsPublished" class="create-test btn btn-default" type="submit" value="true">Publish</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/manage-test-async-operations.js"></script>
}