@model ITest.Web.Areas.Admin.Models.ManageViewModels.IndexViewModel
@{
    ViewData["Title"] = "DashBoard";
}

<h2>@ViewData["Title"]</h2>

<div class="container index">
    <div class="row">
        <div class="col-md-6">
            <div class="panel with-nav-tabs panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1default" data-toggle="tab">Your Test List</a></li>
                        <li><a href="#tab2default" data-toggle="tab">Test Results</a></li>
                        <a asp-area="Admin" asp-controller="Manage" asp-action="CreateTest" class="btn btn-primary pull-right">New Test</a>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="tab1default">
                            <table id="dashboard-table" style="width:100%" class="display table table-striped custab" data-page-length='10'>
                                <thead>
                                    <tr>
                                        <th>Test Name</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                @if (Model.CreatedTests.Any())
                                {
                                    foreach (var test in Model.CreatedTests)
                                    {
                                        <tr>
                                            <td>@test.TestName</td>
                                            <td>@test.CategoryName</td>

                                            @if (test.IsPublished)
                                            {
                                                <td>Publlished</td>
                                                <td class="text-center">
                                                    <a class='btn btn-success btn-xs disabled'>
                                                        <span class="glyphicon glyphicon-ok"></span>
                                                        Published
                                                    </a>
                                                    <a class='btn btn-warning btn-xs disabled'>
                                                        <span class="glyphicon glyphicon-edit"></span>
                                                        Edit
                                                    </a>
                                                    <a class="btn btn-danger btn-xs" data-toggle="modal" data-target="#disable-modal">
                                                        <span class="glyphicon glyphicon-ban-circle"></span>
                                                        Disable
                                                    </a>

                                                    <div class="modal fade" id="disable-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    Are you sure you want to Disable this Test?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Nope</button>
                                                                    <button type="submit" class="btn btn-primary">Yes</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>Draft</td>
                                                <td class="text-center">
                                                    <div class="row">
                                                        <div class="col-lg-5">
                                                            <form asp-area="Admin" asp-controller="Manage" asp-action="PublishTest" method="get">
                                                                <input id="testName" name="testName" type="hidden" value="@test.TestName" />
                                                                <input id="categoryName" name="categoryName" type="hidden" value="@test.CategoryName" />

                                                                <button type="button" class='btn btn-success btn-xs' data-toggle="modal" data-target="#publish-modal">
                                                                    <span class="glyphicon glyphicon-ok"></span>
                                                                    Publish
                                                                </button>

                                                                <div class="modal fade" id="publish-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                    <span aria-hidden="true">&times;</span>
                                                                                </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                Are you sure you want to Publish this Test?
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Nope</button>
                                                                                <button type="submit" class="btn btn-primary">Yes</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                                                        <div class="col-lg-5">
                                                            <form asp-area="Admin" asp-controller="Manage" asp-action="EditTest" method="get">
                                                                <input id="testName" name="testName" type="hidden" value="@test.TestName" />
                                                                <input id="categoryName" name="categoryName" type="hidden" value="@test.CategoryName" />

                                                                <button type="submit" class='btn btn-warning btn-xs'>
                                                                    <span class="glyphicon glyphicon-edit"></span>
                                                                    Edit
                                                                </button>
                                                            </form>
                                                        </div>

                                                        <div class="col">
                                                            <form asp-area="Admin" asp-controller="Manage" asp-action="DeleteTest" method="get">
                                                                <input id="testName" name="testName" type="hidden" value="@test.TestName" />
                                                                <input id="categoryName" name="categoryName" type="hidden" value="@test.CategoryName" />

                                                                <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#delete-modal">
                                                                    <span class="glyphicon glyphicon-remove"></span>
                                                                    Delete
                                                                </button>

                                                                <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                    <span aria-hidden="true">&times;</span>
                                                                                </button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                Are you sure you want to Delete this Test?
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Nope</button>
                                                                                <button type="submit" class="btn btn-primary">Yes</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            NO TESTS!!!
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <div class="tab-pane fade" id="tab2default">
                            <table id="dashboard-table" style="width:100%" class="display table table-striped custab" data-page-length='10'>
                                <thead>
                                    <tr>
                                        <th>Test Name</th>
                                        <th>User Name</th>
                                        <th>Category</th>
                                        <th>Requested Time</th>
                                        <th>Execution Time</th>
                                        <th>Results</th>
                                    </tr>
                                </thead>
                                @if (Model.TestResults.Any())
                                {
                                    foreach (var result in Model.TestResults)
                                    {
                                        <tr>
                                            <td>@result.TestName</td>
                                            <td>@result.UserName</td>
                                            <td>@result.CategoryName</td>
                                            <td>@result.RequestedTime min</td>
                                            <td>@result.ExecutionTime min</td>

                                            @if (result.IsPassed)
                                            {
                                                <td>
                                                    <a class="btn btn-success" asp-action="TestScore" asp-route-userId="@result.UserId" asp-route-testId="@result.TestId">Passed</a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a class="btn btn-danger" asp-action="TestScore" asp-route-userId="@result.UserId" asp-route-testId="@result.TestId">Failed</a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            NO USERTESTS!!!
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    <script>
        $('#dashboard-table').DataTable({
            "order": [[3, "desc"]],
            searching: false,
            "lengthChange": false,
            "info": false
        });
    </script>
}