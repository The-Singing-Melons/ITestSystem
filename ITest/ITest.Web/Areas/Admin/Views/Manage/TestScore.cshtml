@model IEnumerable<TestScoreUserAnswerViewModel>
@{
    ViewData["Title"] = "Test Score";
}
@{ var UserAnswer = Model.FirstOrDefault();}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Test Category</th>
                <th>Test Name</th>
                <th>User Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@UserAnswer.TestCategory</td>
                <td>@UserAnswer.TestName</td>
                <td>@UserAnswer.UserName</td>
        </tbody>
    </table>
</div>

@{var counter = 1; }
@foreach (var testScore in Model)
{
    <div class="well well">
        <h5 class="text-primary">Question @(counter):</h5>
        <h4 class="text-info"> @Html.Raw(testScore.QuestionContent)</h4>
    </div>
    <div class="well well-sm">
        <h5 class="text-primary">Answer:</h5>
        <h4 class="text-info">@Html.Raw(testScore.AnswerContent)</h4>
    </div>
    <br>
    counter++;
}
