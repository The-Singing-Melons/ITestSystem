@model CreateTestViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="container">
    <form asp-area="Admin" asp-controller="Manage" asp-action="CreateTest" method="post">
        <h4>Create Test</h4>
        <hr />
        <div class="row">
            <div class="form-group">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">*</span>
                        <input asp-for="TestName" class="form-control" placeholder="TestName" />
                    </div>
                    <span asp-validation-for="TestName" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">*</span>
                        <input asp-for="RequestedTime" class="form-control" placeholder="RequestedTime" />
                    </div>
                    <span asp-validation-for="RequestedTime" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">*</span>
                        <input asp-for="CategoryName" class="form-control" placeholder="CategoryName" />
                    </div>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div id="questions-container">
                <div class="row">
                    <h4>Add questions to your Test</h4>
                    <button id="add-question" class="btn btn-default pull-right" type="button">Add Question</button>
                </div>

                <div class="row">
                    <div id="questions-body" class="row">
                        @{
                            if (Model.Questions != null && Model.Questions.Count != 0)
                            {
                                for (int q = 0; q < Model.Questions.Count; q++)
                                {
                                    <div id="question-@q" class="question-container panel panel-default">
                                        <button class="delete-question btn btn-danger btn-xs pull-right" type="button">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
                                        <a href="#collapse-@q" data-toggle="collapse" data-parent="#accordion">
                                            <div class="panel-heading">
                                                <h4 class="panel-title">Question @string.Format("{0}", q + 1)</h4>
                                            </div>
                                        </a>
                                        <div id="collapse-@q" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <div class="question-description">
                                                    <h3>Description</h3>
                                                    <input type="text" id="@string.Format("Questions_{0}__Body", q)" name="Questions[@q].Body" class="summernote form-control" value="@Model.Questions[q].Body" />
                                                    <span asp-validation-for="Questions[q].Body" class="text-danger"></span>
                                                </div>
                                                <div class="answers-container">
                                                    @if (Model.Questions[q].Answers != null)
                                                    {
                                                        for (int a = 0; a < Model.Questions[q].Answers.Count; a++)
                                                        {
                                                            <div id="question-@q-answer-@a" class="answer-container">
                                                                <h3 class="form-inline">Answer @string.Format("{0}", a + 1)</h3>
                                                                <button class="delete-answer btn btn-danger btn-xs pull-right" type="button">
                                                                    <span class="glyphicon glyphicon-remove"></span>
                                                                </button>
                                                                <label class="btn btn-success pull-right">
                                                                    @if (Model.Questions[q].Answers[a].IsCorrect)
                                                                    {
                                                                        <input id="@string.Format("Questions_{0}__Answers_{1}__IsCorrect", q, a)" name="radio-@q" class="answer-is-correct" type="radio" value="true" autocomplete="off" checked>
                                                                    }
                                                                    else
                                                                    {
                                                                        <input id="@string.Format("Questions_{0}__Answers_{1}__IsCorrect", q, a)" name="radio-@q" class="answer-is-correct" type="radio" value="true" autocomplete="off">
                                                                    }
                                                                    <span class="glyphicon glyphicon-ok"></span>
                                                                </label>
                                                                <input id="@string.Format("Questions_{0}__Answers_{1}__Content", q, a)" name="Questions[@q].Answers[@a].Content" class="answer-content summernote form-control" value="@Model.Questions[q].Answers[a].Content" />
                                                                <span asp-validation-for="Questions[q].Answers[a].Content" class="text-danger"></span>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <h1>NO ANSWERS!!!</h1>
                                                    }
                                                </div>
                                                <span asp-validation-for="Questions[q].Answers" class="text-danger"></span>
                                            </div>
                                            <div class="panel-body">
                                                <button class="add-answer btn btn-default pull-right" name="collapse-@q" type="button">Add Answer</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="mx-auto">
                                    <h1 class="w-100 p-3">NO QUESTIONS!!!</h1>
                                </div>
                            }
                        }
                    </div>
                    <span asp-validation-for="Questions" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button id="IsPublished" name="IsPublished" class="create-test btn btn-default" type="submit" value="false">Save as Draft</button>
        <button id="IsPublished" name="IsPublished" class="create-test btn btn-default" type="submit" value="true">Publish</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/createTestAsyncOperations.js"></script>
}